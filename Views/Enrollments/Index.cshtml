@model IEnumerable<OnlineCourses.Data.Enrollment>

@{
    ViewData["Title"] = "Enrollment";
}

<h1 class="page-title">Enrollments</h1>

<a class="btn-create" asp-action="Create">+ Enroll in a Course</a>

<div class="card-container">
    @foreach (var item in Model)
    {
        <div class="card">
            <img src="/images/enrollment-placeholder.jpg" alt="Enrollment Image" class="card-img" />

            <div class="card-body">
                <h2 class="card-title">@item.Course.Title</h2>
                <p class="card-subtitle">Student: @item.User.UserName</p>
                <p class="card-date">Enrolled: @item.EnrolledAt.ToShortDateString()</p>

                <div class="card-actions">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-edit">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-details">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-delete">Delete</a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .page-title {
        text-align: center;
        margin-top: 1rem;
        font-size: 2rem;
    }

    .btn-create {
        display: block;
        width: fit-content;
        margin: 1rem auto;
        padding: 0.6rem 1.2rem;
        background-color: #28a745;
        color: white;
        text-decoration: none;
        border-radius: 6px;
        font-weight: bold;
    }

    .card-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        padding: 1.5rem;
    }

    .card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        display: flex;
        flex-direction: column;
    }

    .card-img {
        width: 100%;
        height: 150px;
        object-fit: cover;
    }

    .card-body {
        padding: 1rem;
        flex: 1;
    }

    .card-title {
        margin: 0;
        font-size: 1.2rem;
        color: #333;
    }

    .card-subtitle, .card-date {
        font-size: 0.9rem;
        color: #666;
    }

    .card-actions {
        margin-top: 1rem;
    }

    .btn {
        margin-right: 0.5rem;
        padding: 0.4rem 0.8rem;
        border-radius: 4px;
        text-decoration: none;
        font-size: 0.85rem;
        color: white;
    }

    .btn-edit {
        background-color: #17a2b8;
    }

    .btn-details {
        background-color: #007bff;
    }

    .btn-delete {
        background-color: #dc3545;
    }
</style>
